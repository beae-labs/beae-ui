{
  "name": "@beae-ui/theme-tools",
  "version": "1.0.0",
  "description": "Beae UI | Setting of helpers that makes theming and styling easier",
  "author": "Toan Tran (Albert) <trantoan.fox.97@gmail.com>",
  "homepage": "https://github.com/beae-labs/beae-ui#readme",
  "license": "MIT",
  "sideEffects": false,
  "main": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beae-labs/beae-ui.git",
    "directory": "packages/core/theme-tools"
  },
  "bugs": {
    "url": "https://github.com/beae-labs/beae-ui/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@beae-ui/system": "workspace:^",
    "@beae-ui/utils": "workspace:^",
    "@ctrl/tinycolor": "^3.6.0",
    "tinycolor2": "^1.6.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@types/tinycolor2": "^1.4.3",
    "clean-package": "2.2.0"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
