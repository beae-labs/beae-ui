{
  "name": "@beae-ui/toast",
  "version": "1.0.0",
  "description": "Beae UI | The toast component is used to give feedback to users after an action has taken place.",
  "author": "Toan Tran (Albert) <trantoan.fox.97@gmail.com>",
  "homepage": "https://github.com/beae-labs/beae-ui#readme",
  "license": "MIT",
  "sideEffects": false,
  "main": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beae-labs/beae-ui.git",
    "directory": "packages/components/toast"
  },
  "bugs": {
    "url": "https://github.com/beae-labs/beae-ui/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@beae-ui/alert": "workspace:^",
    "@beae-ui/button": "workspace:^",
    "@beae-ui/close-button": "workspace:^",
    "@beae-ui/portal": "workspace:^",
    "@beae-ui/shared-utils": "workspace:^",
    "@beae-ui/system": "workspace:^",
    "@beae-ui/theme": "workspace:^",
    "@beae-ui/utils": "workspace:^",
    "framer-motion": "^10.15.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "clean-package": "2.2.0"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
